  <body>
      <nav class="uk-navbar-container" uk-navbar>
        <div class="uk-navbar-left">
            <img src="/img/heat.png" height="40" width="40" class="uk-logo uk-margin-medium-left" uk-svg></img>
        </div>

        <div class="uk-navbar-right uk-margin-medium-right">

            <ul class="uk-navbar-nav uk-iconnav" id="uk-iconnav">
                {{!--   TODO: destination search target destinations modal  --}}
                <li><a class="uk-navbar-toggle" uk-toggle href="#search" uk-tooltip="Explore Destinations"><span class="uk-margin-small-right" uk-search-icon></span></a></li>
                {{!--   User location  --}}
                <li><a href="#locations" uk-tooltip="Let's Go"><span class="uk-margin-small-right" uk-icon="icon: world"></span></a></li>
                {{#if user}}
                {{!--  TODO: logout  --}}
                <li><a href="#" id="logout" uk-tooltip="Logout"><span class="uk-margin-small-right" uk-icon="icon: sign-out"></span></a></li>
                {{!-- TODO: delete user reviews --}}
                <li><a ref="#" id="delete" uk-tooltip="Remove my ratings"><span class="uk-margin-small-right" uk-icon="refresh"></span></a></li>
                {{else}}
                {{!--  TODO: sign in target login modal  --}}
                <li><a class="uk-navbar-toggle" uk-toggle href="#account-login" uk-tooltip="Sign up & Login"><span class="uk-margin-small-right" uk-icon="icon: sign-in"></span></a></li>
                {{/if}}
                {{!--   Team  --}}
                <li><a href="#credits" uk-tooltip="Team"><span class="uk-margin-small-right" uk-icon="icon: users"></span></a></li>
            </ul>
            <ul class="uk-iconnav">
                <li><a class="uk-navbar-toggle" uk-toggle="target: #uk-iconnav; mode: click" uk-tooltip="Menu"><span class="uk-margin-small-right" uk-icon="icon: menu"></span></a></li>
            </ul>
        </div>
    </nav>

    {{!--   This is the search destination modal  --}}
    <div id="search" uk-modal>
        <div class="uk-modal-dialog">
            <button class="uk-modal-close-default" type="button" uk-close></button>
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">Where to?</h2>
            </div>

            <div>
                <div class="uk-modal-body uk-text-center uk-padding-large">
                    <form class="uk-search uk-search-large">
                        <input id="search" class="uk-search-input uk-text-center" type="search" onekeyup="search" placeholder="Explore Destinations" autofocus>
                    </form>
                </div>
                <ul id="destinationsList"></ul>
                <div class="uk-modal-footer uk-text-right"></div>
            </div>
            <script src=""></script>
        </div>
    </div>

    {{!--   This is the chosen destination modal  --}}
    <div id="search-destination" uk-modal>
        <div class="uk-modal-dialog">
            <button class="uk-modal-close-default" type="button" uk-close></button>
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">[city]
                    {{!-- funcationality? --}}
                    {{!-- poitive review  --}}
                    {{#if ratingHot}}
                    <span class="uk-margin-small-right" uk-icon="star"></span>
                    {{else}}
                    {{!-- negative review --}}
                    <span class="uk-margin-small-right" uk-icon="trash"></span>
                    {{/if}}
                </h2>
            </div>

            <div>
                <div class="uk-modal-body uk-text-center uk-padding-large">
                    {{!--  TODO: connect rating to city and update  --}}
                    <p>Been there, done that?</p>
                    <p>Was it hot?</p>
                    <div>
                        <button class="uk-button uk-button-link uk-padding-large"><span uk-icon="icon: check"></span></button>
                        <button class="uk-button uk-button-link uk-padding-large"><span uk-icon="icon: close"></span></button>
                    </div>
                    {{!--  TODO: handle rating submission --}}
                </div>
                <div class="uk-modal-footer uk-text-right">
                </div>
            </div>
        </div>
    </div>

    {{!--  This is the inital user login modal --}}
    <div id="account-login" uk-modal>
        <div class="uk-modal-dialog">
            <button class="uk-modal-close-default" type="button" uk-close></button>
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">Come here often?</h2>
            </div>
            <div>
                <div class="uk-modal-body uk-text-center uk-padding-large">
                       
                    <div class="uk-margin">
                        <div class="uk-inline">
                            <button class="uk-button uk-button-default" uk-toggle href="#user-signup">It's my first time.</button>
                        </div>
                    </div>

                    <div class="uk-margin">
                        <div class="uk-inline">
                            <button class="uk-button uk-button-secondary" uk-toggle href="#user-login">This ain't my first rodeo!</button>
                        </div>
                    </div>

                    <div class="uk-modal-footer uk-text-right">
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    {{!--  This is the user login modal --}}
    <div id="user-login" uk-modal>
        <div class="uk-modal-dialog">
            <button class="uk-modal-close-default" type="button" uk-close></button>
            <div class="uk-modal-header">
                {{#if loggedin}}
                <h2 class="uk-modal-title">Welcome back!</h2>
                {{/if}}
            </div>
            <div>
                <div class="uk-modal-body uk-text-center uk-padding-large">
                    <p>Enter your information to access our hottests features.</p>
                    <form>

                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                <input class="uk-input uk-form-width-medium" type="text" name="username" id="username" placeholder="Username" />
                            </div>
                        </div>

                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail"></span>
                                <input class="uk-input uk-form-width-medium" type="email" id="email" name="email" placeholder="Email" />
                            </div>
                        </div>

                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                <input class="uk-input uk-form-width-medium" type="password" id="password" name="password" placeholder="Password" />
                            </div>
                        </div>

                        <div class="uk-modal-footer uk-text-right">
                            <div>
                                <input type="submit" value="Login" class="search-button uk-input uk-form-width-small uk-button-secondary" id="signup" />
                            </div>
                            {{!-- TODO: handle submission --}}
                        </div>

                    </form>
                </div>
                
            </div>
        </div>
    </div>

        {{!--  This is the user sign up modal --}}
    <div id="user-signup" uk-modal>
        <div class="uk-modal-dialog">
            <button class="uk-modal-close-default" type="button" uk-close></button>
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">Join us!</h2>
            </div>
            <div>
                <div class="uk-modal-body uk-text-center uk-padding-large">
                    <p>Enter your information to access our hottests features.</p>
                    <form>

                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                <input class="uk-input uk-form-width-medium" type="text" name="username" id="username-signup" placeholder="Username" />
                            </div>
                        </div>

                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail"></span>
                                <input class="uk-input uk-form-width-medium" type="email" id="email-signup" name="email-signup" placeholder="Email" />
                            </div>
                        </div>

                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                <input class="uk-input uk-form-width-medium" type="password" id="password-signup" name="password-signup" placeholder="Password" />
                            </div>
                        </div>

                        <div class="uk-modal-footer uk-text-right">
                            <div>
                                <input type="submit" value="Login" class="search-button uk-input uk-form-width-small uk-button-secondary" />
                            </div>
                            {{!-- TODO: handle submission --}}
                        </div>

                    </form>
                </div>
                
            </div>
        </div>
    </div>

    <main>    
        <section id="explanation">
            <div class="uk-flex uk-child-width-1-2@m" uk-grid>

                <div class="uk-card">
                    <img src="/img/photo-1594478277825-11f41a17122a.jpg" alt="">
