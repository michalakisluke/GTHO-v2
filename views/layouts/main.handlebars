            <img src="../public/img/heat.png" height="40" width="40" class="uk-logo uk-margin-medium-left" uk-svg></img>
        </div>
        <div class="uk-navbar-right uk-margin-medium-right">
            <ul class="uk-navbar-nav">
                <li>
                    <a uk-toggle="target: #offcanvas-nav" uk-navbar-toggle-icon href="#"></a>
                    <div id="offcanvas-nav" uk-offcanvas="overlay: true; flip: true">
                        <div class="uk-offcanvas-bar">
                            <ul class="uk-nav">
<!--Todo: change icon and target modal on click-->
                                {{#if user}}
                                <li><span class="uk-margin-small-right" uk-icon="icon: info"></span>{{username}}</li>
                                {{else}}
                                <li><a href="#user-login" uk-toggle="target: #modal-close-default">Login</a></li>
                                {{/if}}
                                <li><a href="#locations"><span class="uk-margin-small-right" uk-icon="icon: world"></span>Let's go</a></li>
                                <li><a href="#credits"><span class="uk-margin-small-right" uk-icon="icon: users"></span>Team</a></li>
